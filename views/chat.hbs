<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Optional: Include your CSS file -->
</head>
<body>
    <div id="chatContainer">
        <div id="messages" class="messages"></div> <!-- Message container -->
        <form id="chatForm">
            <input type="text" id="messageContent" placeholder="Type your message..." required>
            <input type="hidden" id="senderId" value="{{user._id}}"> <!-- Sender ID -->
            <input type="hidden" id="recipientId" value="{{recipient._id}}"> <!-- Recipient ID -->
            <button type="submit">Send</button>
        </form>
    </div>

    <script src="/socket.io/socket.io.js"></script> <!-- Include Socket.IO client -->
    <script>
        const socket = io(); // Initialize socket.io connection

        // Listen for incoming messages
        socket.on('chat message', function(msg) {
            // Display the message
            const messagesContainer = document.getElementById('messages');
            const messageElement = document.createElement('div');
            messageElement.textContent = `${msg.sender}: ${msg.content}`; // Adjust according to your data structure
            messagesContainer.appendChild(messageElement);
        });

        const form = document.getElementById('chatForm');
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            const senderId = document.getElementById('senderId').value;
            const recipientId = document.getElementById('recipientId').value;
            const content = document.getElementById('messageContent').value;

            // Emit the message
            socket.emit('chat message', { senderId, recipientId, content });

            // Clear the input
            document.getElementById('messageContent').value = '';
        });
    </script>
</body>
</html>
