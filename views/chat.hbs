<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #000;
            color: #fff;
        }
        .app {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }
        .chat-screen {
            flex: 1;
            display: flex;
            flex-direction: column;
            background-color: #1c1c1c;
            padding: 10px;
            overflow: hidden;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #c8102e;
            padding: 10px;
        }
        .logo {
            font-size: 1.5em;
            font-weight: bold;
        }
        .exit-form {
            display: inline;
        }
        #exit-chat {
            background-color: transparent;
            border: none;
            color: white;
            cursor: pointer;
            font-size: 1em;
        }
        .messages {
            flex: 1;
            overflow-y: auto;
            padding: 10px;
            border: 1px solid #555;
            border-radius: 5px;
            margin: 10px 0;
        }
        .textbox {
            display: flex;
            margin-top: 10px;
        }
        #message-input {
            flex: 1;
            padding: 10px;
            border: 1px solid #555;
            border-radius: 5px;
            background-color: #333;
            color: white;
        }
        #send-message {
            padding: 10px;
            border: none;
            background-color: #c8102e;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            margin-left: 10px;
        }
        .message {
            margin: 5px 0;
            padding: 5px 10px;
            border-radius: 10px;
        }
        .my-message {
            background-color: #c8102e;
            align-self: flex-end;
        }
        .other-message {
            background-color: #555;
            align-self: flex-start;
        }
        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                align-items: flex-start;
            }
            #exit-chat {
                margin-top: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="app">
        <!-- Chat Section -->
        <div class="chat-screen">
            <div class="header">
                <div class="logo">Chat Room</div>
               <form class="exit-form" action="/api/exit-chat" method="GET">
    <button id="exit-chat" type="submit">Exit</button>
</form>

            </div>
            <div class="messages" id="messages"></div>
            <div class="textbox">
                <input type="text" id="message-input" placeholder="Type a message" autocomplete="off">
                <button id="send-message">Send</button>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        // Send message on button click
        document.getElementById('send-message').addEventListener('click', () => {
            const messageInput = document.getElementById('message-input');
            const msg = messageInput.value;
            if (msg) {
                socket.emit('chat message', msg);
                messageInput.value = ''; // Clear input
                addMessage(msg, 'my-message'); // Show my message
            }
        });

        // Receive messages
        socket.on('chat message', (msg) => {
            addMessage(msg, 'other-message'); // Show other's message
        });

        // Function to add messages to the chat
        function addMessage(msg, className) {
            const messagesDiv = document.getElementById('messages');
            const messageDiv = document.createElement('div');
            messageDiv.textContent = msg;
            messageDiv.className = `message ${className}`;
            messagesDiv.appendChild(messageDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight; // Scroll to the bottom
        }
    </script>
</body>
</html>
